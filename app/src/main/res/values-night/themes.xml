        <item name="colorPrimary">#ffc400</item>
        <item name="colorPrimaryVariant">#ffc400</item>
        <item name="colorOnPrimary">#ffc400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffc400</item>
        <item name="colorSecondaryVariant">#ffc400</item>
        <item name="colorOnSecondary">#ffc400</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
