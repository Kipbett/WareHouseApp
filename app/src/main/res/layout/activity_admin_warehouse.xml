<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminWarehouseActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/tool_bar_header"
        android:background="#fcc603"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Update Warehouse"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="italic"
            android:id="@+id/toolbar_title"/>
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warehouse_name_admin"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/tool_bar_header">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/ware_name"
            android:hint="Name of Warehouse"
            android:gravity="center"
            android:textSize="15sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warehouse_owner"
        android:layout_below="@+id/warehouse_name_admin"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/ware_owner"
            android:hint="Name of The owner"
            android:gravity="center"
            android:textSize="15sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warehouse_owner_number"
        android:layout_below="@+id/warehouse_owner"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/ware_owner_number"
            android:hint="Number of the owner"
            android:gravity="center"
            android:textSize="15sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warehouse_owner_email"
        android:layout_below="@+id/warehouse_owner_number"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/ware_owner_email"
            android:hint="Email of the owner"
            android:gravity="center"
            android:textSize="15sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/add_ware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warehouse_owner_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="add warehouse"
        android:textColor="#ffffff"
        android:padding="2dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_ware"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Cancel"
        android:textColor="#ffffff"
        android:padding="2dp"
        android:textSize="20sp"/>


</RelativeLayout>